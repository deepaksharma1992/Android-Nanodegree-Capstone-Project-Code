<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_name_start"
            android:layout_width="@dimen/electricity_icon_back_param"
            android:layout_height="@dimen/electricity_icon_back_param"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:background="@drawable/oval_drawable"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_toEndOf="@+id/tv_name_start"
            android:layout_toRightOf="@+id/tv_name_start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_vendor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold"
                tools:text="Sugarcane Firm" />

            <TextView
                android:id="@+id/tv_selling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/color_blue_gray_500"
                android:textSize="@dimen/button_text_size"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_best_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_green_500"
                    android:textSize="@dimen/phone_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_weight="1"
                    android:autoLink="phone"
                    android:gravity="end"
                    android:textColorLink="@color/color_blue_gray_500"
                    android:textSize="@dimen/phone_text_size"
                    tools:text="9910854213" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>